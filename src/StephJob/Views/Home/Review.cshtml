@model StephJob.Models.ReviewModel
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
    ViewData["Title"] = "Review";
}

<!-- Main body -->
<div class="bgimg-1">
    <div class="caption">
        <div class="container box-white">
            <h1>Pssst!</h1>
            <form>
                <div class="form-group">
                    <label for="Occupation">What is your dream job?</label><br />
                    <select asp-for="Occupation" asp-items="Model.Occupations" placeholder="Pick an occupation"></select>
                </div>
                <div class="form-group">
                    <label for="Industry">In which industry?</label><br />
                    <select asp-for="Industry" asp-items="Model.Industries" placeholder="Pick an industry"></select>
                </div>
            </form>
        </div>
        <i class="fa fa-arrow-down fa-5x" aria-hidden="true"></i>
    </div>
</div>

<div class="slide">
    <div class="container" data-center="opacity: 1"  data-center-top="opacity: 0">
        <div class="row">
            <div class="col-md-6">
                <h1>Employment Prospects</h1>
                <p class="lead">Projection of number of people working as <span id="empProspect">accommodation service managers</span> and projections of retirements</p>
                <hr />
                <h2><span id="earningByWeek"></span> in weekly earnings</h2>
                <hr />
                <h2>For every position that is vacant, there are/is <span id="unemploymentJobVacanciesRatio"></span> unemployed persons.</h2>
            </div>
            <div class="col-md-6">
                <canvas id="empProspectChart"></canvas>
                <canvas id="retirement-projection-chart"></canvas>
            </div>
        </div>
    </div>
</div>

<div class="bgimg-2">
    <div class="caption-35">
        <i class="fa fa-arrow-down fa-5x" aria-hidden="true"></i>
    </div>
</div>

<div class="slide">
    <div class="container" data-center="opacity: 1"  data-center-top="opacity: 0">
        <div class="row">
            <div class="col-md-6">
                <h1>Industry trend</h1>
                <p class="lead">Presently, the <span id="industryName">accommodation and food service...</span> industry represents <span id="industryProportion">NA</span>% of the total industry.</p>
            </div>
            <div class="col-md-6">
                <canvas id="gdp-chart"></canvas>
            </div>
        </div>
    </div>
</div>

<div class="bgimg-2">
    <div class="caption-35">
        <i class="fa fa-arrow-down fa-5x" aria-hidden="true"></i>
    </div>
</div>

<div class="slide">
    <div class="container" data-center="opacity: 1"  data-center-top="opacity: 0">
        <h1>Environmental Outlook</h1>
        <h2><span id="greenGoodsAndServices"></span>% of the total employment in the industry provides green goods and services.</h2>
        <hr />
        <h2><span id="physicalFlowAcccount"></span>% of the physical flow account for greenhouse gas emissions (GEA) by year in kilotonnes.</h2>
    </div>
</div>

<div class="bgimg-3">
    <div class="caption-35">
        <i class="fa fa-arrow-down fa-5x" aria-hidden="true"></i>
    </div>
</div>

